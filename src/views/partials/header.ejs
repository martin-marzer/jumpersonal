<header class="main-header">

    <div  id="jumpstore-header">

        <div class="container">

            <div class="row-jumpstore">

                <div id="jumpstore-header-flex">



                    <div id="jumpstore-menu-mobile">
                        <button class="btn-menu">
                            <i class="fas fa-bars"></i>
                        </button>
                    </div>

                    <div id="jumpstore-logo">
                        <a href="/">
                            <img src="/images/logo/jumpstore logo.png" alt="logo desktop" class="logo">
                        </a>
                    </div>

                    <div id="jumpstore-search">
                        <form action="/search" method="GET" id="jumpstore-box">
                            <input class="fulltext-search-box" type="text" name="keywords" placeholder="Buscar"
                            value = "<%= locals.searchUser ? searchUser : null %>" 
                            >
                            <button  type="submit" class="btn-buscar">
                                <i class="fas fa-search"></i>
                            </button>
                        </form>
                    </div>
                    <div id="jumpstore-right-menu"> 
                        <div id="jumpstore-user">
                            <button> <i class="far fa-user"></i> </button>
                            <div class="dropdown-padding">
                                <div class="dropdown-content">

                                    <% if (locals.usuario) { %>
                                        <a href="/profile">Mi perfil</a>
                                        <a href="/logout" style="color: rgb(228, 44, 44);">Cerrar Sesión</a>
                                    <% } else  {%>
                                        <a href="/register">Registrarse</a>
                                        <a href="/login">Iniciar sesión</a>
                                    <% } %>
                                </div>
                            </div>
                        </div>

                        <div id="jumpstore-cart">
                            <button>
                                <a href="/carrito" class="icono"><i class="fas fa-shopping-cart"></i></a>
                            </button>
                        </div>
                        <% if (locals.usuario && locals.usuario.rol == true) { %>

                            <div id="jumpstore-admin">
                                <button>
                                    <a href="/administrator" class="icono"><i class="fas fa-user-cog"></i></a>
                                </button>
                            </div>
                            <% } %>

                        
                    </div>
                    
                </div>


            </div>

        </div>

    </div>

    <nav id="jumpstore-navbar">
    <div class="container">
        <div class="row-jumpstore">
            <ul>
                <li><a href="/">Inicio</li></a>
                <li><a href="/sneakers/OrderByReleaseDateASC">Productos</li></a>
                <li><a href="/ofertas/OrderByReleaseDateASC">Ofertas</li></a>
                <li><a href="/login">Favoritos</li></a>
            </ul>
        </div>
    </div>
    </nav>

</header>
